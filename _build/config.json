{
  "name": "MarkdownEditor",
  "lowCaseName": "markdowneditor",
  "description": "Markdown editor",
  "author": "John Peca",
  "version": "1.0.0-beta",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "MarkdownEditor",
          "events": [
            "OnRichTextEditorRegister",
            "OnRichTextEditorInit",
            "OnDocFormPrerender",
            "OnBeforeDocFormSave",
            "OnDocFormSave",
            "OnWebPageInit"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "lp.parse_modx_tags",
        "value": false,
        "type": "combo-boolean",
        "area": "markdowneditor.area.lp"
      },
      {
        "key": "lp.parse_modx_tags_timeout",
        "value": 300,
        "area": "markdowneditor.area.lp"
      },
      {
        "key": "upload.image_upload_path",
        "value": "",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.image_upload_url",
        "value": "",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.file_upload_path",
        "value": "",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.file_upload_url",
        "value": "",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.under_resource",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.delete_unused",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.enable_image_upload",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.enable_file_upload",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.max_size",
        "value": "2097152",
        "type": "textfield",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.image_types",
        "value": "jpg,jpeg,png,gif,bmp",
        "type": "textfield",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "upload.file_types",
        "value": "txt,html,htm,xml,js,css,zip,gz,rar,z,tgz,tar,mp3,mp4,aac,wav,au,wmv,avi,mpg,mpeg,pdf,doc,docx,xls,xlsx,ppt,pptx,odt,ods,odp,odb,odg,odf",
        "type": "textfield",
        "area": "markdowneditor.area.upload"
      },
      {
        "key": "cropper.enable_cropper",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.cropper"
      },
      {
        "key": "cropper.show_description",
        "value": false,
        "type": "combo-boolean",
        "area": "markdowneditor.area.cropper"
      },
      {
        "key": "cropper.profiles",
        "value": "[{\"name\": \"Free form\"},{\"name\": \"Square\",\"ratio\": \"1/1\"},{\"name\": \"4x6 wide\",\"ratio\": \"6/4\"},{\"name\": \"5x7 wide\",\"ratio\": \"7/5\"},{\"name\": \"1920x1080 HD\",\"width\": 1920,\"height\": 1080}]",
        "area": "markdowneditor.area.cropper"
      },
      {
        "key": "resizer.aspect_ratio_constraint",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.resizer"
      },
      {
        "key": "resizer.upsize_constraint",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.resizer"
      },
      {
        "key": "resizer.width",
        "value": 400,
        "area": "markdowneditor.area.resizer"
      },
      {
        "key": "resizer.height",
        "value": 0,
        "area": "markdowneditor.area.resizer"
      },
      {
        "key": "general.theme",
        "value": "monokai",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.font_size",
        "value": "12",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.font_family",
        "value": "",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.include_ghfmd",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.include_ghfmd_manager",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.custom_css_manager",
        "value": "",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.include_highlight",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.split",
        "value": false,
        "type": "combo-boolean",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "general.split_fullscreen",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.general"
      },
      {
        "key": "oembed.service",
        "value": "Essence,EmbedlyCards",
        "area": "markdowneditor.area.oembed"
      },
      {
        "key": "oembed.max_height",
        "value": 640,
        "type": "numberfield",
        "area": "markdowneditor.area.oembed"
      },
      {
        "key": "oembed.max_width",
        "value": 640,
        "type": "numberfield",
        "area": "markdowneditor.area.oembed"
      },
      {
        "key": "oembed.frontend_css",
        "value": true,
        "type": "combo-boolean",
        "area": "markdowneditor.area.oembed"
      }
    ]
  },
  "database": {
    "tables": ["MarkdownEditorContent"]
  },
  "build": {
    "resolver": {
      "after": ["resolve.whicheditor.php"]
    }
  }
}